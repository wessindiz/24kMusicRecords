{% extends 'base.html.twig' %}

{% block title %}
	24K /Tarifs
{% endblock %}


{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/tarifs.css') }}">
{% endblock %}


{% block body %}
	<div class="home color-change-2x">
		<main>
			<h1>Tarifs</h1>
		</main>
		<div class="d-flex justify-content-center mt-5 mb-3">
			<h2>Tarifs pour la musique</h2>
		</div>
		<div class="tarifrecord d-flex justify-content-center mt-5 mb-3">
			<table class="table table-dark table-striped">
				<tbody>
					<tr>
						<th scope="row">Enregistrement</th>
						<td>
							<b>40€/h</b>
						</td>
						<td>
							<b>45€/h</b>
							(La nuit à partir de 20h)</td>
					</tr>
					<tr>
						<th scope="row">Instrumental</th>
						<td colspan>
							<b>200€</b>
							<br/>
							phase A (piste par piste)
						</td>
						<td>
							<b>110€</b>
							<br/>
							phase B (en version WAV)
						</td>
					</tr>
					<tr>
						<th scope="row">Mixage</th>
						<td>
							<b>120€/titre</b><br/>(si instru en une seule piste)
							<br/>
							+80€ si le titre provient d’un autre studio
						</td>
						<td>
							<b>250 € /titre</b><br/>(si instru en pistes séparées)<br/>+ 100
																																																																																																																																						              € si le titre provient d’un autre studio
						</td>
					</tr>
					<tr>
						<th scope="row">Mastering</th>
						<td>
							<b>50€</b><br/>pour les titres enregistés au studio</td>
						<td>
							<b>70€</b><br/>pour les titres enregistrés dans un autre studio
						</td>
					</tr>
					<tr>
						<th scope="row">Forfait</th>
						<td colspan="2">
							<b>175€/mois</b>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
		<div class="d-flex justify-content-center mt-5 mb-3">
			<h2>Tarifs pour la photographie</h2>
		</div>
		<div class="tarifshooting d-flex justify-content-center mt-5 mb-3">
			<table class="table table-dark table-striped">
				<tbody>
					<tr>
						<th scope="row">
							<span>Shooting</span>
						</th>
						<td>
							<b>80€</b><br/>
							séances de 1h
							<br/>(+20€ en couple)
						</td>
						<td>
							<b>350€</b><br/>
							séances de 5h
							<br/>(+60€ en couple)
						</td>
					</tr>
					<tr>
						<th scope="row">Conception d'un book</th>
						<td>
							<b>190€</b>
							<br/>
							(Book Photo Classique:
							<br/>-1h de shooting,<br/>
							-10 photos retouchées,<br/>
							couleur et noir et blanc,<br/>
							format: JPEG)
						</td>
						<td>
							<b>399€</b>
							<br/>
							(Book Photo Premium:<br/>
							-3h de shooting,<br/>
							-30 photos retouchées,<br/>
							-couleur et noir et blanc,<br/>
							format: JPEG)
						</td>
					</tr>
					<tr>
						<th scope="row">Clips vidéos</th>
						<td>
							<b>350€</b><br/>
							Pour les clips vidéos sur fond blanc
						</td>
						<td>
							<b>500€</b><br/>
							Pour les clips vidéos sur fond vert
						</td>
					</tr>
					<tr>
						<th scope="row">Covers/Pochettes/Typo</th>
						<td>
							<b>150€</b><br/>
							Pour les graphimes simples
						</td>
						<td>
							<b>200€</b><br/>
							Pour les concepts plus recherchés, avec des effets
						</td>
					</tr>
					<tr>
						<th scope="row">Forfait</th>
						<td colspan="2">2.100€ pour l'année</td>
					</tr>
				</tbody>
			</table>
		</div>


		{% if app.user == null %}
			<p>Veuillez vous connecter
				<a href="/login">ici</a>
				si vous souhaitez réserver votre session!</p>
		{% else %}
			<div class="d-flex justify-content-center">
				<button class="btn btn-outline-danger rdv m-5 ">
					<a href="/calendar/new" class="text-reset text-decoration-none">Réservez votre session!
					</button>
				</a>
			</div>
		{% endif %}
	{% endblock %}
