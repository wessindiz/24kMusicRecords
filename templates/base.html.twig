<!DOCTYPE html>
<html>
	<head>
		<meta
		charset="UTF-8">

		{# Intégration du fichier css "base.css" #}
		<link
		rel="stylesheet" href="{{ asset('css/base.css') }}">

		{# Intégration Bootstrap #}
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

		{# Intégration de Font Awesome icons #}
		<link
		href='https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5.13.1/css/all.css' rel='stylesheet'>

		{# Intégration de la police Jura #}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link
		href="https://fonts.googleapis.com/css2?family=Jura&display=swap" rel="stylesheet">

		{# Intégration de Full Calendar #}
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.9.0/main.min.css" integrity="sha256-FjyLCG3re1j4KofUTQQXmaWJw13Jdb7LQvXlkFxTDJI=" crossorigin="anonymous">

		{# Intégration de Leaflet #}
		 <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css"
   integrity="sha512-xodZBNTC5n17Xt2atTPuE1HxjVMSvLVW9ocqUKLsCC5CXdbqCmblAshOMAS6/keqq/sMZMZ19scR4PsZChSR7A=="
   crossorigin=""/>
   
		<title>
			{% block title %}
				24K/ Accueil
			{% endblock %}
		</title>

		{% block stylesheets %}{% endblock %}
	</head>
	<body>

		{# BARRE DE NAVIGATION DU MENU  #}
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark p-0">
			<div class="container-fluid">
				<a class="navbar-brand" href="/"><img class="logo" src="{{ asset('photos/24kor.jpg') }}"></a>
				<button class="navbar-toggler btnmenu" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">

					<ul class="navbar-nav d-flex align-items-center">
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="/">Accueil</a>
						</li>

						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="/studios">Studios</a>
						</li>

						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="/tarifs">Tarifs</a>
						</li>

						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="/artiste">Label</a>
						</li>

						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="/contact">Contacts</a>
						</li>

						<li class="nav-item"></li>
						

						{% if app.user == null %}
							<a class="nav-link active" aria-current="page" href="/login">
								<i class="fas fa-sign-in-alt"></i>
							</a>

						{% else %}

						<div class="btn-group dropend">
  							<button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
   								 {{ app.user.pseudo }}
  							</button>
  							<ul class="dropdown-menu">

							  {# l'Admin a accès au tableau de bord qui mène vers la page d'administration #}
							  {% if is_granted("ROLE_ADMIN") %}
							  <li><a class="dropdown-item" href="/admin"><i class="fas fa-chart-line"></i> Tableau de Bord </a></li>

							  {% else %}
            					<li><a class="dropdown-item" href="#"><i class="fas fa-user-circle"></i> Mon profil </a></li>
								{% endif %}

             	 				<li><a class="dropdown-item" href="/logout"><i class="fas fa-door-open"></i> Déconnexion </a></li>
  							</ul>
						</div>
							{% endif %}
						</li>
					</ul>
				</div>
			</div>
		</nav>


		{% block body %}{% endblock %}

		{# BARRE DE NAVIGATION DU BAS DE PAGE #}
		<footer>
			<div class="footer">
				<nav class="navbar bottom navbar-dark">
					<div class="container-fluid d-flex justify-content-center p-0">
						<ul class="list-group list-group-horizontal-sm d-flex flex-row bd-highlight mb-3 w-100 justify-content-around ">
							<li class="list-group-item insta réseau">
								<a href="https://www.instagram.com/24krecordsmusic/">
									<i class="fab fa-instagram"></i>
								</a>
							</li>
							<li class="list-group-item fb réseau">
								<i class="fab fa-facebook"></i>
							</li>
							<li class="list-group-item twi réseau">
								<i class="fab fa-twitter"></i>
							</li>
							<li class="list-group-item yt réseau">
								<i class="fab fa-youtube"></i>
							</li>
						</ul>

						<ul class="list-group list-group-flush w-100 d-flex flex-column flex-md-row justify-content-md-center ">
							<li class="list-group-item mentions fw-bold">
								<a href=''>Mentions légales</a>
							</li>
							<li class="list-group-item mentions fw-bold">
								<a href=''>Conditions générales de vente</a>
							</li>
							<li class="list-group-item mentions fw-bold">
								<a href=''>Plan du site</a>
							</li>
							<li class="list-group-item mentions fw-bold">
								<a href=''>Recrutement</a>
							</li>
						</ul>
					</div>
				</nav>
			</div>
		</footer>
		{# Intégration du script de Jquery #}
		<script src="https://code.jquery.com/jquery-3.6.0.slim.js" integrity="sha256-HwWONEZrpuoh951cQD1ov2HUK5zA5DwJ1DNUXaM6FsY=" crossorigin="anonymous"></script>

		{# Intégration du script de Bootstrap #}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

		{# Intégration du script de Font Awesome incons #}
		<script src="https://kit.fontawesome.com/ebc72dbf59.js" crossorigin="anonymous"></script>

		{# Intégration du script de Full Calendar #}
		<script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.9.0/main.min.js" integrity="sha256-8nl2O4lMNahIAmUnxZprMxJIBiPv+SzhMuYwEuinVM0=" crossorigin="anonymous"></script>
		
		{# Intégration du script de Leaflet #}
		 <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"
   integrity="sha512-XQoYMqMTK8LvdxXYG3nZ448hOEQiglfqkJs1NOQV44cWnUrBc8PkAOcXy20w0vlaXaVUearIOBhiXZ5V3ynxwA=="
   crossorigin=""></script>

		{% block javascripts %}{% endblock %}
	</body>
</html>
