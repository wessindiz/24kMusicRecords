{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block title %}Calendrier
{% endblock %}

{% block body %}



	{% for message in app.flashes('success') %}
		<div class="alert alert-success alert-dismissible fade show" role="alert">
			{{ message }}
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	{% endfor %}


	{% for message in app.flashes('danger') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
			{{ message }}
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	{% endfor %}


    <div>
        <div>
            <div>
					{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
					<h5 class="modal-title" id="exampleModalLabel">modifier  RDV!</h5>
				</div>
				<div class="modal-body">


					<div class="d-flex justify-content-around m-3">
						<div class="mb-1">
							{{ form_label(form.categorie) }}
						</div>

						<div class="form-floating mb-4">
							{{ form_widget(form.categorie) }}
						</div>
					</div>

					<div class="m-3">
						<div class="mb-1">
							{{ form_label(form.title) }}
						</div>

						<div class="form-label form-floating mb-4">
							{{ form_widget(form.title) }}
						</div>
					</div>

					<div class="m-3">
						<div class="mb-1">
							{{ form_label(form.start) }}
						</div>

						<div class="form-floating mb-4 ">
							{{ form_widget(form.start) }}
						</div>
					</div>


					<div class="m-3">
						<div class="mb-1">
							{{ form_label(form.end) }}
						</div>

						<div class="form-label form-floating mb-4">
							{{ form_widget(form.end) }}
						</div>
					</div>


					<div class="m-3">
						<div class="mb-1">
							{{ form_label(form.description) }}
						</div>

						<div class="form-floating mb-4 ">
							{{ form_widget(form.description) }}
						</div>
					</div>
				</div>
				<div class="modal-footer btn btn-secondary" data-bs-dismiss="modal">
					{{ form_row(form.envoyer) }}
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>

{% endblock %}