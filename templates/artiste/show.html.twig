{% extends 'base.html.twig' %}
{% block title %}Hello PersonneController!
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/artiste/show.css') }}">
{% endblock %}

{% block body %}
	<div class="home color-change-2x">
		<br>
		<br>
		<br>
		<br>
		<br>
		<br>
		<div class="example-wrapper d-flex justify-content-around ">
			<div class="card">
				<img src="{{ asset('photo-artiste/' ~ artiste.photo)}}" class="card-img-top" alt="...">
				<div class="card-body">
					<h4 class="card-title">{{ artiste.nom }}</h4>
					<h6 class="card-text">
						{{ artiste.role }}</h6>
					<h6 class="card-text">
						{{ artiste.age }}</h6>
				</div>

				<ul class="list-group list-group-flush">
					<li class="list-group-item text-center">
						<button class="btn btn-warning" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
							Description
						</button>
					</li>
					<li>
						<div class="collapse" id="collapseExample">
							<div class="card card-body">
								{{ artiste.description}}
							</div>
						</div>
					</li>
					<li class="list-group-item text-center">
						<a href="{{ artiste.urlinsta }}" class="card-link">
							<i class="fab fa-instagram"></i>
						</a>
						<a href="{{ artiste.urlyoutube }}" class="card-link">
							<i class="fab fa-youtube"></i>
						</a>
					</li>
				</ul>
			</div>
		</div>
		<br>
		<br>
		<br>
		<br>
		<br>
		<br>
	</div>
</div>{% endblock %}
